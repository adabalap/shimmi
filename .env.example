DATA_DIR=./data
APP_TIMEZONE=Asia/Kolkata
BOT_PERSONA_NAME=Shimmi

# Invocation tokens
BOT_COMMAND_PREFIX=@shimmi,shimmi,@spock,spock,చిట్టి,shichi

# If false, even DMs require a prefix
ALLOW_NLP_WITHOUT_PREFIX=false

# Allow processing of fromMe messages (self testing)
ALLOW_FROMME=1

WAHA_API_URL=http://localhost:3000/api
WAHA_API_KEY=
WAHA_SESSION=default
WEBHOOK_SECRET=

# STRICT allowlist for ALL chats (DM + group + channel + broadcast)
# Add your DM chat id here (often ends with @lid or @c.us) to test fromMe.
ALLOWED_GROUP_JIDS=

GROQ_API_KEY=
GROQ_MODEL_POOL=llama-3.3-70b-versatile,llama-3.1-8b-instant
GROQ_TIMEOUT=60
GROQ_MAX_INFLIGHT=5

LIVE_SEARCH_ENABLED=1
LIVE_SEARCH_MODEL=groq/compound-mini

CHROMA_ENABLED=1
CHROMA_COLLECTION=shimmi_conversations
CHROMA_EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHROMA_TOP_K=10
CHROMA_RECENT_K=10

MESSAGE_DEBOUNCE_MS=800
LLM_MAX_QUEUE_PER_CHAT=3
LLM_QUEUE_WAIT_SEC=20

LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s %(levelname)s %(name)s:%(message)s
ACCESS_LOG_LEVEL=WARNING
DEBUG_AGENT=0

ANONYMIZED_TELEMETRY=False
