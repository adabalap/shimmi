DATA_DIR=./data
APP_TIMEZONE=Asia/Kolkata
BOT_PERSONA_NAME=Shimmi

# Invocation tokens
BOT_COMMAND_PREFIX=@shimmi,shimmi,@spock,spock,చిట్టి,shichi

# If false, DMs also require a prefix
ALLOW_NLP_WITHOUT_PREFIX=false

# Allow processing/responding to fromMe messages (self-testing)
ALLOW_FROMME=1

# WAHA
WAHA_API_URL=http://localhost:3000/api
WAHA_API_KEY=
WAHA_SESSION=default
WEBHOOK_SECRET=

# STRICT allowlist (applies to ALL chats). Only these chats are processed, persisted, and logged.
ALLOWED_GROUP_JIDS=

# Groq
GROQ_API_KEY=
GROQ_MODEL_POOL=llama-3.3-70b-versatile,llama-3.1-8b-instant
GROQ_TIMEOUT=60
GROQ_MAX_INFLIGHT=5

# Live Search via Groq Compound web_search
LIVE_SEARCH_ENABLED=1
LIVE_SEARCH_MODEL=groq/compound-mini

# Chroma
CHROMA_ENABLED=1
CHROMA_COLLECTION=shimmi_conversations
CHROMA_EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHROMA_TOP_K=10
CHROMA_RECENT_K=10

# Robustness
MESSAGE_DEBOUNCE_MS=800
LLM_MAX_QUEUE_PER_CHAT=3
LLM_QUEUE_WAIT_SEC=20

# Facts
FACTS_VERIFICATION=1
FACTS_MIN_CONF=0.85
ALLOW_FREEFORM_MEMORY_KEYS=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s %(levelname)s %(name)s:%(message)s
ACCESS_LOG_LEVEL=WARNING
DEBUG_AGENT=0

# Disable Chroma telemetry
ANONYMIZED_TELEMETRY=False
